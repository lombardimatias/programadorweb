


<div class="container" style="margin: 100px auto">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col text-center"> <!-- Añadir "text-center" para centrar el contenido de la columna -->
      <h4 class="text-dark">¡Hola {{persona}}!</h4>
      <br>
      <a href="/admin/login/logout" class="btn btn-outline-danger btn-sm">Cerrar sesión
        <i class="fas fa-sign-out-alt" style="margin-left: 5px;"></i>
      </a>
    </div>
  </div>
</div>


<!-- inicio fila 2-->

<div class="row text-dark">
  <div class="col-10">
    <h2>Listado de novedades</h2>
    <br>
  </div>
  


<div class="col-2 text-right">
      <a href="/admin/novedades/agregar" title="Agregar novedad"  class="btn btn-lg btn-success"> 
    <i class="bi bi-folder-plus"></i> Nuevo</a>
</div>


</div> <!--fin fila 2 -->




<!--inicio fila 3-->

<div class="row">
  <div class="col">
    <table class="table table-dark table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col">Imagen</th>
          <th scope="col" class="text-center">Acciones</th>

        </tr>
      </thead>

      <tbody>
        {{#each novedades}}
        <tr>
          <th scope="row"> {{id}} </th>
          <td>{{titulo}}</td>
           <td>{{{imagen}}}</td>
          <td class="text-center">
            <a href="/admin/novedades/modificar/{{id}}" title="Modificar" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-pencil"></i></a>

            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-outline-danger">
              <i class="bi bi-trash2"></i></a>


          </td>
        </tr>
        {{/each}}
      </tbody>

    </table>  
  </div>
</div>
<!--fin fila 3-->


