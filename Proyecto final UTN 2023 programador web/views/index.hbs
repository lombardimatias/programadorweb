    <!--cierre sección nosotros-->

    <!--inicio mapa +formulario-->
    <div id="conocenos" class="row py-4 scroll_section">
        <div class="col-md-4 offset-md-2">
            <h2>Visitanos</h2>
            <div class="mapa">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d52465.93090297808!2d-58.30819115221036!3d-34.727352314725785!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95a32e699848e9a9%3A0x6fa6103e261d19f7!2sCerveceria%20Y%20Malteria%20Quilmes%20Saica%20Y%20G!5e0!3m2!1ses!2sar!4v1692631684649!5m2!1ses!2sar" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </div>
        <!--cierre div con id visitanos-->

        <!--formulario contacto-->
        <div id="contacto" class="col-md-4 mt-4 mt-sm-0  scroll_section">
            <h2>Contactanos</h2>
            <form class="row g-3" action="/" method="post">
                <div class="col-md-6">

                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div>

                <div class="col-md-6">

                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="apellido">
                </div>

                <div class="col-12">

                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email">
                </div>

                <div class="col-12">

                    <label for="tel" class="form-label">Teléfono</label>
                    <input type="text" class="form-control" id="tel" placeholder="..." name="tel">
                </div>

                <div class="col-12">

                    <label for="mensaje" class="form-label">Mensaje</label>
                    <textarea class="form-control" id="mensaje" cols="30" rows="3" name="mensaje"></textarea>
                </div>

                <div class="col-12">
                    <br><br>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>



            </form> <br>
            <p align="center" class="mensaje">{{message}}</p> <!--le pasamos una propiedad -->
        </div>
    </div>
    <!--cierre mapa +formulario-->








</div>
<!--cierre div contenedor-->